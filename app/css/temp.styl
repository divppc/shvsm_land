@import 'nib'
@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,700,700italic,300,600italic,600&subset=latin,cyrillic");

*
	box-sizing border-box
.clearfix
	clearfix()
html
	position relative         
body
	font-family: 'Open Sans', sans-serif;
	color #fff
	position relative
	width 100%
	padding 0
	min-width 320px
	margin 0 auto
	clearfix()
*
	box-sizing border-box
a
	text-decoration none
	color #fff
img
	max-width 100%
.wrap
	width 60%
	margin 0 auto
	clearfix()
header
	position fixed
	top 0
	left 0
	width 100%
	background rgba(0 0 0 .15)
	.wrap
		padding 15px 0
		position relative
		.logo
			position absolute
			top 15px
			left 50%
			transform translateX(-50%)
		.main-title
			float left
			p
				margin 0
				font-weight bold
				font-size 30px
			span
				font-size 24px
		.callback
			float right
			p
				margin 0
				font-size 36px
			a
				display block
				background #3e87d1
				transition 0.2s
				border-radius 2px
				padding 10px 0
				text-align center
				text-transform uppercase
				letter-spacing 1px
				&:hover
					background #1b6abb
section.main
	background url("../images/main-bg.png") no-repeat center/cover
	.wrap
		padding 15vw 0 12vw 0
		.main-form
			float right
			background #f6f6f6
			.form-title
				padding 1vw 2.3vw
				background #282828
				border-bottom 5px solid #ff4a4a
				text-align center
				font-size 20px
				p
					margin 0
					font-weight bold
					text-transform uppercase
			.form-container
				padding 1.2vw 2.3vw 1.8vw
				p
					font-size 18px
					color #ff4a4a
					margin 0
				.form-wrap
					margin 2.08vw auto
					input:not([type="submit"])
						display block
						width 100%
						background #fff
						border 1px solid #d6d5d3
						height 40px
						padding-left 35px
						outline 0
						&.err
							border 1px solid #fb1b1b
							&::-webkit-input-placeholder
								color #fb1b1b
						&:not(:last-child)
							margin-bottom 1vw
						&:first-child
							background url("../images/input-name.png") no-repeat 10px center
							&.err
								background url("../images/input-name-err.png") no-repeat 10px center
						&:nth-child(2)
							background url("../images/input-phone.png") no-repeat 10px center
							&.err
								background url("../images/input-phone-err.png") no-repeat 10px center
						&:nth-child(3)
							background url("../images/input-mail.png") no-repeat 10px center
							&.err
								background url("../images/input-mail-err.png") no-repeat 10px center
					input[type="submit"]
						display block
						width 90%
						margin 0 auto
						background #ff4a4a
						color #fff
						text-transform uppercase
						letter-spacing 1px
						font-size 18px
						font-weight 500
						height 45px
						line-height 45px
						text-align center
						border none
						cursor pointer
						transition 0.2s
						&:hover
							background #fb1b1b
		.head-title
			float left
			max-width 55%
			div
				text-transform uppercase
				font-size 42px
				font-weight 600
			p
				margin 0
				font-size 30px
				text-transform uppercase
			ul
				margin 20px 0 0 0
				padding 0 0 0 20px
				display block
				border-left 7px solid #6398cc
				li
					list-style-type none
					font-size 26px
section.main-info
	padding 2.5vw 0
	background #282828
	position relative
	&:before		
		display block
		content url("../images/mouse.png")
		position absolute
		top -60px
		left 50%
		transform translateX(-50%)
	.wrap
		text-align center
		font-size 24px
		text-transform uppercase